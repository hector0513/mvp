                    method="post"
                  >
                      <div class="form-group row">
                        <div class="col-sm-12">
                          <label
                            for="title"
                            style="
                              font-family: Quicksand;
                              font-weight: bold;
                              color: #bcbcca;
                            "
                            >NOMBRE O TÍTULO</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="name"
                            name="name"
                            placeholder=""
