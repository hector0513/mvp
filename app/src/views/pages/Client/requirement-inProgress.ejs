    function acceptWallet(proposal){

      var reqInfo = {
        proposal
      }

      $.post("/opportunity/inProgress/walletPayment",
        reqInfo,
        function(data,status){
            console.log(data)
            console.log(status);
            if (status=="success"){
              $('#Modal-wallet').modal('hide');
              $('#Modal-receipt').modal('show');
              $("#html_fee").html(data.html_fee);
