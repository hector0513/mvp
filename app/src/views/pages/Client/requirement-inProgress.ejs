    function extendWork(requirement){

      var reqInfo = {
        requirement
      }

      $.post("/opportunity/extendWork",
        reqInfo,
        function(data,status){
            console.log(data)
            console.log(status);
            if (data=="ok") window.location.reload();
            else alert(data)
        });
